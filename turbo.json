{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["//#build-images"]
    },
    "//#lint": {},
    "sync": {
      "dependsOn": ["//#go-build", "ts-gen-proto", "ts-gen-abi"]
    },
    "//#go-build": {
      "inputs": ["./proto/**", "./pkg/proto/**"],
      "dependsOn": ["//#build-contracts"]
    },
    "//#build-contracts": {
      "inputs": ["./contracts/**"]
    },
    "//#build-tpodserver": {
      "dependsOn": ["//#go-build"]
    },
    "//#build-p2p-helper": {
      "dependsOn": ["//#go-build"]
    },
    "//#build-images": {
      "dependsOn": ["//#sync", "//#build-tpodserver", "//#build-p2p-helper"]
    },
    "ts-gen-proto": {
      "inputs": ["../../proto/**"]
    },
    "ts-gen-abi": {
      "inputs": ["../../contracts/**"],
      "dependsOn": ["//#build-contracts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
