{
  "containers": [
    {
      "name": "php-redis",
      "image": {
        "url": "chentex/random-logger:latest"
      },
      "ports": [
        {
		  "name":"internal",
          "containerPort": 80,
          "hostHttpHost": "guestbook.localhost"
        }
      ],
      "env": {
        "GET_HOSTS_FROM": "env",
        "REDIS_MASTER_SERVICE_HOST": "redis",
        "REDIS_SLAVE_SERVICE_HOST": "redis"
      },
      "resourceRequests": [
        {
          "resource": "cpu",
          "amountMillis": 100
        },
        {
          "resource": "memory",
          "amount": 100000000
        }
      ],
      "volumes": [
        {
          "name": "test-html",
          "mountPath": "/var/www/html/test.html"
        },
        {
          "name": "db-data",
          "mountPath": "/data"
        }
      ]

    }
  ],
  "volumes": [
    {
      "name": "db-data",
      "type": 1,
      "filesystem": {
        "resourceRequests": [
          {
            "resource": "storage",
            "amount": 1000000000
          }
        ]
      }
    },
    {
      "name": "test-html",
      "type": 2,
      "secret": {
        "file": "test.html"
      }
    }
  ],
  "replicas": {
    "min": 2,
    "max": 2
  }
}
